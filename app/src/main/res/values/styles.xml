<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CircleButtonStyle">
        <item name="android:layout_width">@dimen/circleimagesize</item>
        <item name="android:layout_height">@dimen/circleimagesize</item>
        <item name="android:background">@drawable/oval</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
